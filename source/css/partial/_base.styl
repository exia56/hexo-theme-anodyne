body
  -webkit-backface-visibility: hidden;
  font-family $main-font

.vh-40
  height 40vh

.bg-1
  background $gradient-color-1
  background -moz-linear-gradient(left, $gradient-color-1 0%, $gradient-color-2 100%)
  background -webkit-linear-gradient(left, $gradient-color-1 0%, $gradient-color-2 100%)
  background linear-gradient(to right, $gradient-color-1 0%, $gradient-color-2 100%)

.pab-100px
  padding-top 100px

.w8
  width 64rem

.tj
  text-align justify

.header-icon
  font-size 30vh
  opacity 0.4
  position absolute
  bottom 0rem
  right 6rem

.text-main-color
  color $main-color

.border-color
  border-color white

.hover-border-main-color
  transition all 0.3s cubic-bezier(.25,.8,.25,1)
  &:hover
    border-color $main-color-hover
    transform: translateY(-3px);

.hover-text-main-color
  transition all 0.3s cubic-bezier(.25,.8,.25,1)
  &:hover
    color $main-color-hover

.cursor-default {
  cursor: default;
}

.li
  span 
    position: absolute
    width: 4rem
    height: 4rem
    margin-left: -2rem
    line-height: 4rem
    border-radius: 100%
    background-color: $main-color
    z-index: 1000
  &:before
    content: ""
    position: absolute
    top: 1rem
    bottom: -1rem
    width: 1rem
    margin-left: -0.5rem
    border-radius: 1rem
    background-color: $main-color
  

