$highlight-comment      = #23ae29
$highlight-red          = #c82829
$highlight-orange       = #fb6d19
$highlight-green        = #718c00
$highlight-aqua         = #3e999f
$highlight-blue         = #4271ae
$highlight-purple       = #8959a8

// Code Blocks
.content
  figure
    &.highlight
      margin-left 0
      margin-right 0
      figcaption
        padding-top 10px
        font-size 85%
        opacity 0.75
        &:before
          content "\f016"
          font-family FontAwesome
          margin 0 10px 0 20px
        a
          margin-left 10px
        & +
          table
      .gutter
        display none
      .code
        padding-left 15px

.content pre, .content figure.highlight
  border-radius: 4px
  background-color #eeeeee
  font-family Consolas, "Liberation Mono", Menlo, Courier, monospace
  font-size 85%
  line-height 1.45
  overflow: auto

.content code 
  border-radius: 4px
  border: 1px solid #ccc
  background-color #eeeeee
  font-family Consolas, "Liberation Mono", Menlo, Courier, monospace
  font-size 75%
  line-height 1.45
  overflow: auto
  padding: 2px 5px

// Syntax Highlighting
pre
  .comment
  .template_comment
  .diff .header
  .doctype
  .pi
  .lisp .string
  .javadoc
  .meta
    color: $highlight-comment
  .variable
  .attribute
  .tag
  .regexp
  .ruby .constant
  .xml .tag .title
  .xml .pi
  .xml .doctype
  .html .doctype
  .css .id
  .css .class
  .css .pseudo
  .lisp .body
  .smalltalk .number
  .constant
  .class .title
  .parent
  .haskell .type
    color: $highlight-red
  .number
  .preprocessor
  .built_in
  .literal
  .params
  .constant
  .preprocessor .keyword
  .shebang
  .symbol
  .symbol .string
  .diff .change
  .special
  .attr_selector
  .important
  .subst
  .cdata
  .clojure .title
  .command
  .tag .value
  .phpdoc
  .tex .formula
  .regexp
  .string
    color: $highlight-orange
  .class
  .ruby .class .title
  .css .rules .attribute
    color: $highlight-green
  .value
  .inheritance
  .header
  .ruby .symbol
  .xml .cdata
    color: $highlight-green
  .hexcolor
    color: $highlight-aqua
  .function
  .python .decorator
  .python .title
  .ruby .function .title
  .ruby .title .keyword
  .perl .sub
  .javascript .title
  .coffeescript .title
    color: $highlight-blue
  .keyword
  .javascript .function
  .winutils
  .method
  .addition
  .css .tag
  .request
  .status
  .nginx .title
    color: $highlight-purple